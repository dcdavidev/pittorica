{
  "name": "@pittorica/picto",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@pittorica/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components": {
      "@pittorica/source": "./src/components/index.ts",
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "default": "./dist/components/index.js"
    },
    "./css": {
      "sass": "./src/index.scss",
      "style": "./dist/index.css",
      "import": "./dist/index.css",
      "default": "./dist/index.css"
    },
    "./types": {
      "@pittorica/source": "./src/types/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "dependencies": {
    "clsx": "^2.1.1",
    "html-react-parser": "^5.2.10"
  },
  "devDependencies": {
    "postcss-custom-properties": "^14.0.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "picto",
    "targets": {
      "lint": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "pnpm dlx eslint --no-warn-ignored --fix ./packages/picto"
          ]
        }
      },
      "fmt": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "pnpm exec prettier --ignore-unknown --write ./packages/picto"
          ]
        }
      },
      "lint:fmt": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "pnpm dlx nx run picto:lint",
            "pnpm dlx nx run picto:fmt"
          ]
        }
      }
    }
  },
  "sass": "./src/index.scss"
}
