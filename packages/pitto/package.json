{
  "name": "@pittorica/pitto",
  "version": "0.4.4",
  "private": false,
  "homepage": "https://github.com/dcdavidev/pittorica/tree/main/packages/pitto#readme",
  "bugs": {
    "url": "https://github.com/dcdavidev/pittorica/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dcdavidev/pittorica.git",
    "directory": "packages/pitto"
  },
  "license": "MIT",
  "author": {
    "name": "Davide Di Criscito",
    "url": "https://github.com/dcdavidev"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "@pittorica/source": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./css": "./dist/index.css",
    "./components": {
      "types": "./dist/components/index.d.ts",
      "@pittorica/source": "./src/components/index.ts",
      "import": "./dist/components/index.js",
      "default": "./dist/components/index.js"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "@pittorica/source": "./src/icons/index.ts",
      "import": "./dist/icons/index.js",
      "default": "./dist/icons/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "@pittorica/source": "./src/components/*/index.ts",
      "import": "./dist/components/*/index.js",
      "default": "./dist/components/*/index.js"
    },
    "./styles": {
      "types": "./dist/styles/index.d.ts",
      "@pittorica/source": "./src/styles/index.ts",
      "import": "./dist/styles/index.js",
      "default": "./dist/styles/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "dependencies": {
    "@fontsource-variable/fira-code": "^5.2.7",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/roboto-serif": "^5.2.8",
    "@fontsource/momo-trust-display": "^5.2.1",
    "@tabler/icons-react": "^3.35.0",
    "@vanilla-extract/css": "^1.17.5",
    "@vanilla-extract/dynamic": "^2.1.5",
    "@vanilla-extract/recipes": "^0.5.7",
    "@vanilla-extract/sprinkles": "^1.6.5",
    "clsx": "^2.1.1",
    "color": "^5.0.3",
    "motion": "^12.23.24",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@vanilla-extract/vite-plugin": "^5.1.3",
    "markdown-toc": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "targets": {
      "doc:g:toc": {
        "executor": "nx:run-commands",
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "pnpm dlx markdown-toc -i README.md"
          ]
        }
      }
    }
  }
}
